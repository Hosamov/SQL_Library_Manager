//- Main book listing page
extends layout

block content
  h1= title
  hr
  
  p
    form(action="/books/new", method="get")
    a(class="button" href="/books/new") Add a New Book
    
  table 
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody 
      each book in books 
        tr
          td 
            a(href="/books/" + book.id) #{book.title}
          td= book.author
          td= book.genre
          td= book.year
