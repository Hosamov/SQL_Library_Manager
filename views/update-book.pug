extends layout

block content
  title= book.title
  h1=title
  
  include errors
  
  form(action="/books/" + book.id, method="post") 
  include form
  
  form(action=book.id + "/delete" method="post" onsubmit="return confirm('Do you really want to delete this book?')")
    p
      a(class="button" href="/") Done
    p
      input(type="submit" value="Delete Book")    
